{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}

    {% for publication in publications %}
        <h4>{{ publication.title }}</h4>
        <p>
            <a href="/publication/{{ publication.id }}">Plus de d√©tails</a>
        </p>
    {% endfor %}

    {% if previous >= 0 %}
        <a href="{{ path('/', { id: post.id, offset: previous }) }}">Previous</a>
    {% endif %}
    {% if next < comments|length %}
        <a href="{{ path('/', { id: post.id, offset: next }) }}">Next</a>
    {% endif %}

{% endblock %}
