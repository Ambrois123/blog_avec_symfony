{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}

    {% for publication in publications %}
        <h4>{{ publication.title }}</h4>
        <p>
            <a href="/publication/{{ publication.id }}">Plus de d√©tails</a>
        </p>
    {% endfor %}

    {% if previous >= 0 %}
        <a href="{{ path('app_blog', { offset: previous }) }}">Previous</a>
        {% endif %}
        {% if next < publications|length %}
        <a href="{{ path('app_blog', { offset: next }) }}">Next</a>
        {% endif %}

    <button><a href="{{ path('app_login') }}">Se connecter</a></button>

{% endblock %}
